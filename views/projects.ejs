<div class="mod-article-categories mod-article-categories--projects">
  <div class="mp-content mp-content--projects">
    <% include included/standardContent.ejs %>
  </div>
  <div class="macats--items">
    <%
    var iTotal = projectCategories.length;
    for(var i=0; i<iTotal; i++){
      var projectCategory = projectCategories[i];
      var seeAllProjects = ressources.current.seeAllProjectsFormat.replace('{0}', projectCategory.title.toLowerCase()) %>
      <article class="mod-articles mod-articles--project-category">
        <a class="marts--title-link" href="<%- projectCategory.url %>" title="<%- seeAllProjects %>">
          <h1><%- projectCategory.title %></h1>
        </a>
        <p><%- projectCategory.description %></p>
        <%
        var jTotal = projectCategory.projects.length;
        for(var j=0; j<jTotal; j++){
          var project = projectCategory.projects[j]; %>
          <% if(j===0){%>
            <ul>
          <%}%>
            <li class="marts--item">
              <span class="marts--item-title"><%- project.title %></span>
              <%- project.description %>
              <a href="<%- project.url %>" class="marts--item-more"><%- ressources.current.readMore %></a>
              <% if(project.images.length){%>
                <div class="marts--item-medias">
                  <%
                  for(var k=0; k<project.images.length; k++){
                    var image = project.images[k]; %>
                    <div class="marts--item-media">
                      <a href="<%- project.url %>" title="<%- ressources.current.readMore %>">
                        <img src="<%- image.path %>" alt="<%- image.title %>" />
                      </a>
                    </div>
                  <%}%>
              </div>
              <%}%>
            </li>
          <% if(j===jTotal-1){%>
            </ul>
          <%}%>
        <%}%>
      </article>
    <%}%>
  </div>
</div>
