<div class="mod-article-categories mod-article-categories--projects">
  <% include included/standardContent.ejs %>
  <div class="macats--list">
    <%
    var iTotal = projectCategories.length;
    for(var i=0; i<iTotal; i++){
      var projectCategory = projectCategories[i]; %>
      <article class="mod-articles mod-articles--project-category">
        <a href="<%- projectCategory.url %>">
          <h1><%- projectCategory.title %></h1>
        </a>
        <%- projectCategory.description %>
        <%
        var jTotal = projectCategory.projects.length;
        for(var j=0; j<jTotal; j++){
          var project = projectCategory.projects[j]; %>
          <% if(j===0){%>
            <ul>
          <%}%>
            <li class="marts--article">
              <%- project.title %> <a href="<%- project.url %>" class="marts--more">Lire plus...</a>
              <% if(project.images.length){%>
                <div class="marts--medias">
                  <%
                  for(var k=0; k<project.images.length; k++){
                    var image = project.images[k]; %>
                    <div class="marts--media">
                      <a href="<%- project.url %>" title="Lire plus">
                        <img src="<%- image.path %>" alt="<%- image.title %>" />
                      </a>
                    </div>
                  <%}%>
              </div>
              <%}%>
            </li>
          <% if(j===jTotal-1){%>
            </ul>
          <%}%>
        <%}%>
      </article>
    <%}%>
  </div>
</div>
