<nav class="mod-main-navigation navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only"><%- ressources.header.navigationToggleButton %></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            <a class="mn--logo navbar-brand" href="/" title="<%- website.title %>"><img src="/medias/images/akt-small.png" alt="<%- website.title %>" /></a>
        </div>
        <div id="navbar" class="mn--navbar collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <% for(var i=0; i<menuPages.length; i++) {
                  var p = menuPages[i];
                  var totalSubPages = p.subMenuPages.length;
                  var isDropdown = totalSubPages > 0;
                  var linkClasses = p.isCurrent ? 'active' : '';
                  if(isDropdown){
                    if(linkClasses.length){
                      linkClasses += ' ';
                    }
                    linkClasses += 'dropdown-toggle';
                  }
                %>
                <li<%- isDropdown ? ' class="dropdown"' : '' %>>
                  <a href="<%- p.url %>"<%- linkClasses.length ? ' class="' + linkClasses + '"' : '' %><%- isDropdown ? ' data-toggle="dropdown" role="button" aria-expanded="false"' : '' %>><%- p.title %><%- isDropdown ? ' <span class="caret"></span>' : '' %></a>
                  <%
                    for(var j=0; j<totalSubPages; j++){
                      var sp = p.subMenuPages[j];%>
                      <% if(j===0){%>
                          <ul class="dropdown-menu" role="menu">
                      <%}%>
                        <li>
                          <a href="<%- sp.url %>"<%- sp.isCurrent ? ' class="active"' : '' %>><%- sp.title %></a>
                        </li>
                      <% if(j===totalSubPages-1){%>
                      </ul>
                      <%}%>
                  <%}%>
                </li>
              <% } %>
          </ul>
        </div>
    </div>
</nav>
