<% if(imageBanners && imageBanners.length){%>
  <div id="HeaderCarousel" class="mod-header-banners carousel slide" data-interval="6000" data-ride="carousel">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
      <%
      for(var i=0; i<imageBanners.length; i++){%>
        <li data-target="#HeaderCarousel" data-slide-to="<%- i %>"<%- i===0 ? ' class="active"' : '' %>></li>
      <%}%>
    </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
      <%
      for(var i=0; i<imageBanners.length; i++){
        var banner = imageBanners[i];
        var cssClass = i===0 ? ' active' : ''; %>
        <div class="item<%- cssClass %>">
          <div class="mhb-image">
            <div style="background-image: url(<%- banner.imagePath %>);">
            </div>
          </div>
          <%
          var hasTitle = banner.title;
          var hasSubTitle = banner.subtitle;
          var hasDescription = banner.description;
          var hasTitles = hasTitle || hasSubTitle;
          var hasContent = hasTitles || hasContent;

          if(hasContent || banner.url){%>
            <div class="carousel-caption">
              <% if(hasContent){%>
                <div class="mhb-content">
                  <% if(hasTitles){%>
                    <div class="mhb-titles">
                    <% if(hasTitle){%>
                      <h1><%- banner.title %></h1>
                      <span class="block"></span>
                    <%}%>
                    <%if(hasSubTitle){%>
                      <h2><%- banner.subtitle %></h2>
                    <%}%>
                    </div>
                  <%}%>
                  <%if(banner.description){%>
                    <p><%- banner.description %></p>
                  <%}%>
                </div>
              <%}%>
              <%if(banner.url){%>
                <div class="mhb-btn-wrapper">
                  <a href="<%- banner.url %>" class="btn btn-primary"><%- ressources.banners.readMore %></a>
                </div>
              <%}%>
            </div>
          <%}%>
        </div>
      <%}%>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#HeaderCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#HeaderCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
<%}%>
